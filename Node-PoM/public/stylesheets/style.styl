body
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  font-size 13px
  text-align center
  text-stroke 1px rgba(255, 255, 255, 0.1)
  color #555
a
  color: #00B7FF
h1, h2
  margin 0
  font-size 22px
  color #343434
h1
  text-shadow 1px 2px 2px #ddd
  font-size 40px 

input[type =text]
  width 300px  // size does not work - have to use width
  margin-left 16px
  float left
  background-color: #ffa
input[type =number]
  width 100px
  margin-left 16px
  float left
  background-color: #ffa
input[type =button], input[type =submit]
  clear both
  text-align left
  margin-left 70px
  display block
  font-size 15px
  // font-weight bold
  background-color #aac
